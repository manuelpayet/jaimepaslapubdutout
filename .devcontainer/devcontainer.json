{
  "name": "Radio Transcription Dev",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "mounts": [
    "source=radio-pip-cache,target=/home/vscode/.cache/pip,type=volume",
    "source=radio-whisper-cache,target=/home/vscode/.cache/whisper,type=volume"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.testing.pytestEnabled": true,
        "python.testing.unittestEnabled": false,
        "python.formatting.provider": "black"
      }
    }
  },
  "postCreateCommand": "bash .devcontainer/post-install.sh",
  "postStartCommand": "sudo chown -R vscode:vscode /home/vscode/.cache /home/vscode/.local 2>/dev/null || true",
  "forwardPorts": [],
  "remoteUser": "vscode",
  "remoteEnv": {
    "PATH": "/home/vscode/.local/bin:${containerEnv:PATH}"
  }
}
